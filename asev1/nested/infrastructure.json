      "allowedValues": [
        "small",
        "medium",
        "large"
      ],
      "metadata": {
        "description": "The size of VM to use for CD Worker Pool 2"
      }
    },
    "cmworker2count": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "The number of VM to use for CM Worker Pool 2"
      }
    },
    "cdworker2count": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "The number of VM to use for CD Worker Pool 2"
      }
